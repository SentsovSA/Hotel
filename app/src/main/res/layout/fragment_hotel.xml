<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_578"
            android:gravity="center_horizontal|top"
            android:maxHeight="100dp"
            android:text="@string/title"
            android:textAppearance="@style/title"/>

        <LinearLayout
            android:id="@+id/frame_578"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_579"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <View
                android:id="@+id/image_20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/hotel"
                android:paddingTop="16dp" />

            <LinearLayout
                android:id="@+id/frame_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/frame_1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@string/star"
                    android:src="@drawable/icons" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:height="19sp"
                    android:text="@string/rating"
                    android:textAppearance="@style/rating" />

            </LinearLayout>


            <TextView
            android:id="@+id/hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:gravity="top"
            android:text="@string/steigenberger_makadi"
            android:textAppearance="@style/name"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:gravity="top"
                android:text="@string/address"
                android:textAppearance="@style/address"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/cost"
                    android:textAppearance="@style/cost"/>

                <TextView
                    android:id="@+id/cost2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/cost2"
                    android:textAppearance="@style/cost2"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame_579"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/frame_579"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/about"
                android:layout_width="343dp"
                android:layout_height="26dp"
                android:gravity="top"
                android:lineSpacingExtra="0sp"
                android:text="@string/about"
                android:textAppearance="@style/about"
                android:translationY="-0.07sp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/frame_9"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/info1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/frame_2"
                        android:gravity="center_horizontal|top"
                        android:lineSpacingExtra="0sp"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="2dp"
                        android:text="@string/info1"
                        android:textAppearance="@style/info"
                        android:translationY="-0.05sp" />


                    <TextView
                        android:id="@+id/info2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/frame_2"
                        android:gravity="center_horizontal|top"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="2dp"
                        android:layout_marginStart="8dp"
                        android:text="@string/info2"
                        android:textAppearance="@style/info" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/info3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/frame_2"
                        android:gravity="center_horizontal|top"
                        android:lineSpacingExtra="0sp"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="2dp"
                        android:text="@string/info3"
                        android:textAppearance="@style/info"
                        android:translationY="-0.05sp" />

                    <TextView
                        android:id="@+id/info4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/frame_2"
                        android:gravity="center_horizontal|top"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="2dp"
                        android:layout_marginStart="8dp"
                        android:text="@string/info4"
                        android:textAppearance="@style/info"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/aboutInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/aboutInfo"
                android:textAppearance="@style/aboutInfo" />

            <LinearLayout
                android:id="@+id/frame_582"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/frame_582"
                android:layout_gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/group_3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/emoji"
                        android:src="@drawable/emoji_happy"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/conveniences"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:text="@string/conveniences"
                            android:textAppearance="@style/aboutInfo" />

                        <TextView
                            android:id="@+id/necessary1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:text="@string/necessary"
                            android:textAppearance="@style/necessary" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="100dp"
                        android:contentDescription="@string/arrow"
                        android:src="@drawable/arrow"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:id="@+id/vector_56"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/vector_56" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/group_4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/emoji"
                        android:src="@drawable/tick_square" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/included"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:lineSpacingExtra="0sp"
                            android:text="@string/included"
                            android:textAppearance="@style/aboutInfo"
                            android:translationY="-0.05sp" />

                        <TextView
                            android:id="@+id/necessary2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:text="@string/necessary"
                            android:textAppearance="@style/necessary" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="100dp"
                        android:contentDescription="@string/arrow"
                        android:src="@drawable/arrow" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:id="@+id/vector_561"
                    android:layout_width="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="25dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/vector_56" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/group_5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginBottom="15dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/emoji"
                        android:src="@drawable/close_square" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/excluded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:lineSpacingExtra="0sp"
                            android:text="@string/excluded"
                            android:textAppearance="@style/aboutInfo"/>

                        <TextView
                            android:id="@+id/necessary3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:text="@string/necessary"
                            android:textAppearance="@style/necessary" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="88dp"
                        android:contentDescription="@string/arrow"
                        android:src="@drawable/arrow" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bars_bars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bar">

            <Button
                android:id="@+id/chooseBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="28dp"
                android:backgroundTint="@color/blue"
                android:text="@string/choose"
                android:textAppearance="@style/button"
                app:cornerRadius="15dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>